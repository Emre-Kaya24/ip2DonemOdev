@model List<ip2DonemOdev.DAL.Entities.Place>
@{
    ViewData["Title"] = "Senegal'in Tarihi Ve Turistik Yerleri";
}

<style>
    body {
        background: linear-gradient(135deg, #dfe9f3, #fef8e5);
        min-height: 100vh;
    }
    .tourist-list {
        font-family: 'Segoe UI', Arial, sans-serif;
        background: linear-gradient(135deg, #ffffff, #f7f7ff);
        padding: 25px;
        border-radius: 15px;
        max-width: 650px;
        margin: 30px auto;
        box-shadow: 0 6px 18px rgba(0,0,0,0.12);
        border: 1px solid #e5e5e5;
    }

        .tourist-list h2 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 20px;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .tourist-list ul {
            padding-left: 0;
            list-style: none;
            margin: 0;
        }

        .tourist-list li {
            background: #ffffff;
            margin: 12px 0;
            padding: 14px 18px;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 500;
            color: #2c3e50;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            transition: 0.3s ease;
            border-left: 5px solid #6ab0ff;
        }

            .tourist-list li:hover {
                transform: translateX(8px);
                background: #f0f8ff;
                border-left-color: #007bff;
                box-shadow: 0 6px 14px rgba(0,0,0,0.12);
                color: #007bff;
            }

            .tourist-list li::before {
                content: "📌";
                font-size: 18px;
            }
</style>

<div class="tourist-list">
    <h2>Senegal Tarihi ve Turistik Yerler</h2>
    <ul>
        @foreach (var item in Model)
        {
            <li>@item.Title</li>
        }
    </ul>
</div>