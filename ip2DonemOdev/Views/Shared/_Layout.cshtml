<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* Soft Light Grey Navbar */
        .navbar {
            background: linear-gradient(90deg, #ffffff, #f4f4f4);
            padding: 12px 18px !important;
            border-bottom: 1px solid #e0e0e0 !important;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        }

        .navbar-brand {
            font-size: 22px;
            font-weight: 700;
            color: #333 !important;
            letter-spacing: 0.5px;
            transition: 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.03);
                color: #000 !important;
            }

        .navbar-nav .nav-link {
            color: #444 !important;
            font-weight: 500;
            padding: 10px 15px;
            margin: 0 3px;
            border-radius: 6px;
            transition: 0.25s ease;
        }

            .navbar-nav .nav-link:hover {
                background-color: #eaeaea;
                transform: translateY(-2px);
            }

        .navbar-nav span.nav-link {
            color: #555 !important;
            font-weight: 600;
        }
    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ip2DonemOdev</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ip2DonemOdev.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Senegal Bayraklı Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/senegal-flag.png" alt="Senegal Bayrağı"
                         style="width:32px; height:auto; margin-right:10px; border-radius:3px;">
                    Senegal Tanıtım
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">AnaSayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Population" asp-action="GetPopulation">Nüfus Grafiği</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="CountryCities" asp-action="Index">Senegal Şehirleri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Places" asp-action="Index">Tarihi ve Turistik Yerler</a>
                        </li>
                    </ul>

                    <!-- Sağ Kısım (Login/Register/Logout) -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark d-flex align-items-center">
                                    <i class="bi bi-person-check me-2"></i>
                                    Hoşgeldin, @User.Identity.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex align-items-center" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>
                                    Çıkış Yap
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex align-items-center" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-2"></i>
                                    Kayıt Ol
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex align-items-center" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    Oturum Aç
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ip2DonemOdev - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
