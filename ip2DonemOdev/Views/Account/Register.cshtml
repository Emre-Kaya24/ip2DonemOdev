@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="d-flex justify-content-center align-items-center py-5" style="min-height:100vh; background:#f8fafc;">
    <div class="card border-0 shadow-lg rounded-4" style="width: 440px;">
        <div class="card-body p-4 p-md-5">

            <div class="text-center mb-4">
                <h3 class="fw-bold mb-1">Kayıt Ol</h3>
                <div class="text-muted">Yeni hesap oluştur ve devam et</div>
            </div>

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
            {
                <div class="alert alert-danger text-center py-2 small" role="alert">
                    Lütfen tüm alanları doğru doldurun.
                </div>
            }

            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center small mb-3" })

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, "E-posta", new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-envelope"></i>
                        </span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "ornek@mail.com" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, "Şifre", new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-lock"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control"})
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-3">
                    Kayıt Ol
                </button>
            }

            <hr class="my-4">

            <div class="text-center">
                <small class="text-muted">
                    Hesabın var mı?
                    <a asp-controller="Account" asp-action="Login" class="fw-semibold text-decoration-none">
                        Giriş Yap
                    </a>
                </small>
            </div>

        </div>
    </div>
</div>
